<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Espace Professeur</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/base-style.css">
</head>

<body>
  <!-- Div pour le fond flou -->
  <div class="background"></div>

  <%- include('partials/navbar-prof') %>


  <div class="container">
    <h1 class="title">Missions en cours</h1>

    <!-- Missions en cours -->
    <% offres.forEach(offer => { %>
        <div class="mission-box">
          <h3>Mission à <%= offer.ville %></h3>
          <p><strong>Nombre d'heures :</strong> <%= offer.nbHeures %> heures</p>
          <p><strong>Date de début :</strong> <%= offer.startDate %></p>
          <p><strong>Date de fin :</strong> <%= offer.endDate %></p>
        </div>
      <% }) %>
    <!-- Historique des missions -->
    <div class="accordion" id="historiqueMissions">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            Voir l'historique des missions
            <span class="arrow">▲</span>
          </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
          data-bs-parent="#historiqueMissions">
          <div class="accordion-body">
            <div class="mission-box" style="background-color: white; color: black;">
              <p><strong>Nombre d'heures :</strong> 10 heures</p>
              <p><strong>Date de début :</strong> 05/10/2024</p>
              <p><strong>Date de fin :</strong> 15/10/2024</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>

</html>