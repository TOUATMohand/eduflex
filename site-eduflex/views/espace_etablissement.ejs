<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Espace Professeur</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../public/styles.css">
  <style>
    /* Styles de base */
    body,
    html {
      font-family: Verdana, Geneva, sans-serif;

      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
    }

    /* Fond flou */
    .background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('image.webp');
      /* Chemin de votre image */
      background-size: cover;
      background-position: center;
      filter: blur(8px);
      /* Niveau de flou */
      z-index: -1;
    }

    .container {

      background-color: #f0f2f5;
      /* Fond de couleur f0f2f5 */
      padding: 20px;
      /* Optionnel : ajoute un peu de marge intérieure */
      border-radius: 8px;
      /* Optionnel : ajoute un léger arrondi aux coins */

      max-width: 800px;
      margin: 20px auto;
      position: relative;
      z-index: 1;
    }

    .title {
      text-align: center;
      margin-bottom: 20px;
      color: black;
    }

    /* Box des missions */
    .mission-box {
      background-color: white;
      color: black;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
    }

    .mission-box h4 {
      margin: 0 0 10px;
    }

    /* Styles pour le menu déroulant */
    .accordion-button {
      display: flex;
      align-items: center;
      color: black;
      font-weight: bold;
      font-size: 0.7em;
    }

    .accordion-button:focus {
      box-shadow: none;
    }

    .accordion-button .arrow {
      margin-left: auto;
      transition: transform 0.3s;
      font-size: 1em;
    }

    .accordion-button.collapsed .arrow {
      transform: rotate(0deg);
      /* Flèche vers le bas (fermé) */
    }

    .accordion-button:not(.collapsed) .arrow {
      transform: rotate(180deg);
      /* Flèche vers le haut (ouvert) */
    }

    /* Navbar uniforme */
    .navbar {
      background-color: #f8f9fa !important;
      /* Couleur claire comme dans Bootstrap bg-light */
      border-bottom: 1px solid #ddd;
    }

    .navbar .navbar-brand,
    .navbar .nav-link {
      color: black !important;
      font-family: "Times New Roman", Times, serif;
      font-size: 1rem;
    }

    .navbar .nav-link:hover,
    .navbar .navbar-brand:hover {
      color: #0056b3 !important;
    }

    .navbar-toggler {
      border-color: rgba(0, 0, 0, 0.1);
    }

    .navbar-toggler-icon {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%280, 0, 0, 0.5%29' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }
  </style>
</head>

<body>
  <!-- Div pour le fond flou -->
  <div class="background"></div>

  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/espace_etablissement">Accueil</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/publier">Publier une Offre</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/visio">Visio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/espace_pedagogique">Espace Pédagogique</a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">
              <button class="btn btn-light" id="loginButton">Se déconnecter</button>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <div class="container">
    <h1 class="title">Missions en cours</h1>

    <!-- Missions en cours -->
    <% offres.forEach(offer => { %>
        <div class="mission-box">
          <p><strong>Nombre d'heures :</strong> <%= offer.nbHeures %> heures</p>
          <p><strong>Date de début :</strong> <%= offer.startDate %></p>
          <p><strong>Date de fin :</strong> <%= offer.endDate %></p>
        </div>
      <% }) %>

    <!-- Historique des missions -->
    <div class="accordion" id="historiqueMissions">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            Voir l'historique des missions
            <span class="arrow">▲</span>
          </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
          data-bs-parent="#historiqueMissions">
          <div class="accordion-body">
            <div class="mission-box" style="background-color: white; color: black;">
              <p><strong>Nombre d'heures :</strong> 10 heures</p>
              <p><strong>Date de début :</strong> 05/10/2024</p>
              <p><strong>Date de fin :</strong> 15/10/2024</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>

</html>